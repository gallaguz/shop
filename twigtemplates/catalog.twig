<h2>
    Каталог
</h2>

{% for item in catalog %}
    <img src="/img/{{ item.img }}" alt="" width="100"><br>
    <a href="/product/get/?id={{ item.id }}"><h3>{{ item.title }}</h3></a>
    <p>Цена: {{ item.price }}</p>
    <button data-id="{{ item.id }}" class="buy">Купить</button><br><hr>
{% endfor %}

<a href="/product/catalog/?page={{ page }}">Показать еще ...</a>
